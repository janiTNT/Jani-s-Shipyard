	[
		{ExternalCell=[-1, 0]; InternalCell=[0, 1]}
		{ExternalCell=[1, 0]; InternalCell=[0, 1]}
	]
	GeneratorRequiresDoor = false
	GenerateRectCollider = false
	ReceivableBuffs : ^/0/ReceivableBuffs [Jani_BossArmorHealthBonus]
	EditorIcon
	{
		Texture
		{
			File = "armort.png"
			SampleMode = Linear
		}
		Size = [32, 32]
	}
	Components : ^/0/Components
	{
		Collider
		{
			Type = PolygonCollider
			Vertices
			[
				[.5, .5]
				[1, 1]
				[0, 1]
			]
		}
		
		CosmiliteArmorBuffProvider
		{
			Type = CircleBuffProvider
			BuffType = Jani_BossArmorHealthBonus
			BuffAmount = 1.05% / 4
			BuffRadius = 5
			//Falloff = 1
		}
		
		Graphics
		{
			Type = Graphics
			Location = [0.5, 0.5]
			Floor // This is needed so that armor shows up in ship ghosts.
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "armort_f.png"
						Size = [1, 1]
					}
				]
			}
			Walls
			{
				Layer = "external_walls"
				DamageLevels
				[
					{
						File = "armort.png"
						NormalsFile = "./data/ships/terran/armor_tri/external_wall_normals.png"
						Size = [1, 1]
						UVRotation = 0
					}
				]
			}
			Roof = &<../../../Decorative/StationArmor/t.rules>/Part/Components/Graphics/Roof
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/SmallPartDestroyedDry
			Location = [.5, .5]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "./data/ships/terran/armor_tri/blueprints.png"
			Size = [1, 1]
		}
	}

	Stats
	{
		AOEResist = (&~/Part/DamageResistances/explosive/BaseValue) * 100
	}
