Part : <./data/ships/terran/base_part_terran.rules>/Part
{
	NameKey = "Parts/ProfanedArmor"
	IconNameKey = "Parts/ProfanedArmorIcon"
	ID = janiTNT.profaned_armor // Part IDs must always be in the form of "author_name.part_name". If making your own mod, do *not* use "cosmoteer" as your author name, because it may conflict with future vanilla parts.
	EditorGroup = "BossParts"
	DescriptionKey = "Parts/ProfanedArmorDesc"
	Resources
	[
		[profanedcore, 2]
		[steel, 4]
	]
	AIValueFactor = 0
	Size = [1, 1]
	IsRotateable = false
	SelectionTypeID = "armor"
	MaxHealth = 4000 * 8
	ExplosiveDamageAbsorption = 100%
	DamageResistances = {explosive = 50%, heat = 90%}//solar resistant
	TypeCategories = [armor]
	Flammable = false
	InitialPenetrationResistance = 7
	ContinuingPenetrationResistance = &InitialPenetrationResistance
	CreatePartPerTileWhenGrabbed = ""
	CrewSpeedFactor = 0
	Density = 4
	IsWalled = true
	IsSelfDestructible = false
	AllowedDoorLocations = []
	GeneratorRequiresDoor = false
	IgnoreRotationForMirroredSelection = true
	ReceivableBuffs : ^/0/ReceivableBuffs []
	EditorIcon
	{
		Texture
		{
			File = "armor.png"
			SampleMode = Linear
		}
		Size = [32, 32]
	}
	Components : ^/0/Components
	{
		Graphics
		{
			Type = Graphics
			Location = [0.5, 0.5]
			Floor // This is needed so that armor shows up in ship ghosts.
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "armor.png"
						Size = [1, 1]
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "armor.png"
						Size = [1, 1]
					}
				]
			}
			Roof = &<./data/ships/terran/armor/armor.rules>/Part/Components/Graphics/Roof
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/SmallPartDestroyedDry
			Location = [.5, .5]
			HitEffects
			[
				{
					Type = ExplosiveDamage//the good
					TotalDamage = 3000
					Radius = 10
					Slices = 1
					Filter
					{
						Ships = false
						Shields = false
						Bullets = true
						OnlyBulletCategories = [missile, laser, bullet, mine]
						Crew = false
						Enemies = true
						Junk = true
					}
				}
				{
					Type = AreaFires//the bad
					FireChancePerTile = .2
					Radius = 5
					FireFalloff = 0
					Delay = 0.75
					Filter
					{
						Enemies = true
						Junk = true
						Friendlies = true
					}
				}
			]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "./data/ships/terran/armor/blueprints.png"
			Size = [1, 1]
		}
	}

	Stats
	{
		AOEResist = (&~/Part/DamageResistances/explosive) * 100
	}
}