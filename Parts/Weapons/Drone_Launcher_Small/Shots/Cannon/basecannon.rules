ID = "janiTNT.combatdroneMK_2.base"
Range = 400
IdealRange = 350
Speed = -18

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = .65
		Density = 0.5
		LinearDamping = 2
		AngularDamping = 2
		FrameOfReferenceDuration = 5
		CollidesWithBullets = true
	}
	
	TargetSearch
	{
	    Type = TargetSearch
	    Interval = 0.5
	    Range = 250
	    TargetTypesByPriority = [ShipParts] //This piece of code i have found in ABH's escort drone, and is solely used to target new ships once the target is done for
	}
	
	DeathByLifetime
	{
		Type = DeathByLifetime
		Lifetime = 45
		HasTarget = true
		OnDeath = &../Hit/HitFriendly
	}
	Death
	{
		Type = DeathByLifetime
		HasTarget = false
		// Lifetime will be auto-calculated based on range and speed.
		OnDeath = &../Hit/HitFriendly
	}
	
	Repulsion
	{
		Type = Acceleration
		Acceleration = [-190 * 2, 0]
		AccelerationOverTime = [0, 0.95]
		Direction = Target
	}
	
	Targetable
	{
		Type = Targetable
		Health = 4500
		TargetCategory = "missile"

		// No AOE damage when shot down.
		OnDeath
		{
			MediaEffects
			[
				&<./Data/shots/laser_bolt_small/particles/laser_bolt_small_hit_struct.rules>
				
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/laser_bolt_small/laser_bolt_small_hit.wav"
					Volume = .1
					SpeedVariation = .4
				}
			]
		}
	}

	Homing
	{
		Type = TargetHoming
		TurnVelocity = 260d
		Delay = .25
		TargetLeadPrediction = false
		AvoidanceRaycastDistance = 100		
	}
	
	Acceleration
	{
		Type = Acceleration
		Acceleration = 150 * 2
	}
	Retarget
	{
		Type = SameShipRetarget
	}
	
	Sprite
	{
		Type = Sprite
		IsLit = true
		Sprite
		{
			Texture
			{
				File = "../../cannon.png"
				MipLevels = max
			}
			Size = [3, 2]
		}

		NormalsTexture
		{
			File = "../../cannon_n.png"
			MipLevels = max
		}
	}
	
	DeathByEnemyProximity
	{
		Type = DeathByEnemyProximity
		Interval = .1
		Range = 110
		DetectsShips = true
		DetectsBullets = false
		StartDelay = .3
		FactorEffectsWith = Targetable
		
		OnDeath
		{
			HitEffects
			[
				{
					Type = SpawnBullets
					Bullet = &<cannonshot.rules>
					Count = 1
					Spread = [-1.5d, 1.5d]
					Arc = [0d, 0d]
					Distance = 1.5
					InheritVelocity = true
				}
			]
			MediaEffects
			[
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/ships/terran/cannon_med/shoot.wav"
					Volume = 0.8
					Speed = 1
					SpeedVariation = .25
				}
			]
		}
	}
	Hit
	{
		Type = SimpleHit

		HitShield = &HitOperational
		SourceShipCollisionDelay = 1.5/30
		
		BulletCollisions
        {
            Enemies = true
            Junk = true
            Friendlies = true
            OnlyBulletCategories = [missile, mine]
        }
		HitBullet
		{
			Bounce = true
			MediaEffects
			[
				&<./Data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .1
					SpeedVariation = .4
				}
			]
		}
		
		HitOperational
		{
			Bounce = true
			HitEffects
			[
				{
					Type = Damage
					Damage = 350
				}
				{
					Type = Impulse;
					Impulse = 5;
				}
			]

			MediaEffects
			[
				&<./Data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .1
					SpeedVariation = .4
				}
			]
		}
		HitStructural
		{
			Bounce = true
			HitEffects
			[
				{
					Type = Damage
					Damage = 500
				}
				{
					Type = Impulse;
					Impulse = 1.5;
				}
			]

			MediaEffects
			[
				&<./Data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .1
					SpeedVariation = .4
				}
			]
		}
		HitFriendly
		{
			Bounce = true
			MediaEffects
			[
				&<./Data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .1
					SpeedVariation = .4
				}
			]
		}
	}
	MediaEffects
	{
		Type = MediaEffects
		Offset = [-0.75, 0]
		Rotation = 180d
		MediaEffectsScale = 0.6
		MediaEffects
		[
			&<../../../Drone_Launcher_Tiny/drone_fire.rules>
		]
	}
	Plumes
	{
		Type = MediaEffects
		Offset = [-59/64, 0]
		Rotation = 180d
		MediaEffectsScale = 1
		MediaEffects
		[
			&<../../smalldrone_plume.rules>
			&<../../smalldrone_plume_lights.rules>
		]
	}
}