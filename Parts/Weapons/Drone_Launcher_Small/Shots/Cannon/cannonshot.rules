ID = "janiTNT.small_drone_bullet"
Range = 350
IdealRange = 250
Speed = 300

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.15
		Density = 0.0001
		//LinearDamping = 4
	}

	Targetable
	{
		Type = Targetable
		Health = 170
		TargetCategory = "bullet"
		
		OnDeath = &../Hit/HitFriendly
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}
	
	DamagePool
	{
		Type = DamagePool
		Damage = 2500
	}

	Hit
	{
		Type = PenetratingHit
		Penetration = 20
		PenetrationSpeed = 15
		
		CrewCollisions = {Enemies=true; Junk=true}
		PenetratesCrew = true
		HitCrew = &HitOperational
		
		HitShield = &HitOperational
		HitOperational
		{
			ReduceEffectsByPenetration = true
			HitEffects
			[	
				{
					Type = Damage
					Damage = 0
					DamagePool = DamagePool
				}
				{
					Type = Impulse
					Impulse = 20
				}
			]

			MediaEffects
			[
				&<./data/shots/bullet_med/particles/bullet_hit_med.rules>
				&<./data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>
				&<./data/shots/bullet_med/particles/bullet_smoke_med.rules>
				&<./data/shots/bullet_med/particles/bullet_flash_med.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .4
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .05
					Duration = .5
				}
			]
		}
		HitStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 1000
				}
				{
					Type = Impulse;
					Impulse = 5;
				}
			]

			MediaEffects
			[
				&<./data/shots/bullet_med/particles/bullet_hit_med_struct.rules>
				&<./data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>
				&<./data/shots/bullet_med/particles/bullet_flash_med_struct.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/bullet_med/bullet_med_hit_structure.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
		HitFriendly
		{
			MediaEffects
			[
				&<./data/shots/bullet_med/particles/bullet_hit_med.rules>
				&<./data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>
				
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .4
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = Damage
					Damage = 100
					DamagePool = DamagePool
				}
				{
					Type = Fire
					FireChance = .03
				}
				{
					Type = Impulse
					Impulse = 20
				}
			]
			MediaEffects
			[
				&<./data/shots/bullet_med/particles/bullet_hit_med.rules>
				&<./data/shots/bullet_med/particles/bullet_hit_med_sparks.rules>
			]
		}
		PenetratingStructural = &HitStructural
		FinishedPenetratingOperational = &PenetratingOperational
		FinishedPenetratingStructural = &PenetratingStructural
	}
	Sprite
	{
		Type = Sprite
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Sprite
		{
			Texture
			{
				File = "./data/shots/bullet_med/bullet_med.png"
				SampleMode = Linear
				MipLevels = max
			}
			Size = [0.35, 0.25]
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0
		IsLight = true
		Offset = [-0.5, 0]
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [8, 4]
			VertexColor = [255, 100, 0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.125
		}
	}

	MediaEffects
	{
		Type = MediaEffects
		MediaEffectsScale = 0.85
		MediaEffects
		[
			&<./data/shots/bullet_med/particles/bullet_trail_med.rules>
		]
	}
}
