ID = "janiTNT.burst1asermk3shot"
Range = 250
IdealRange = [60, 200]
IdealRadius = [5, 50]
Speed = 280
ReceivableBuffs = [ElectronBuff]

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.0001
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Targetable
	{
		Type = Targetable
		Health = 300
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		FactorEffectsWith = Targetable

		CrewCollisions = {Enemies=true; Junk=true}
		HitCrew = &HitOperational

		HitShield = &HitOperational
		HitOperational
		{
			Offset = [-0, 0]

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = { BaseValue=3000; BuffType=ElectronBuff; BuffMode=Multiply; }
					Radius = { BaseValue=3; BuffType=ElectronBuff; BuffMode=Multiply; }
					Slices = 1
					DamageType = default
					Filter
					{
						OperationalHealth = true
						StructuralHealth = false
					}
				}
				{
					Type = Impulse;
					Impulse = 20;
				}
			]
			
			MediaEffects
			[
				&<./data/shots/laser_bolt_large/particles/laser_bolt_large_hit.rules>
				&<./data/shots/laser_bolt_large/particles/laser_bolt_large_flash.rules>
				&<./data/shots/laser_bolt_large/particles/laser_bolt_large_sparks.rules>
				&<./data/shots/laser_bolt_large/particles/laser_bolt_large_spikes.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .4
					SpeedVariation = .4
				}
				
				: /BASE_SHAKE
				{
					ShakeAmount = .06
					Duration = .3
				}
			]
		}
		HitStructural
		{
			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = { BaseValue=1500; BuffType=ElectronBuff; BuffMode=Multiply; }
					Radius = { BaseValue=3; BuffType=ElectronBuff; BuffMode=Multiply; }
					Slices = 1
					DamageType = default
					Filter
					{
						OperationalHealth = false
						StructuralHealth = true
					}
				}
				{
					Type = Impulse;
					Impulse = 10;
				}
			]
			
			MediaEffects
			[
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_hit_struct.rules>
				&<./data/shots/laser_bolt_large/particles/laser_bolt_large_sparks_struct.rules>
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_sparks_struct.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}

	Sprite
	{
		Type = AnimatedSprite
		Offset = [-1, 0]
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "./data/shots/laser_bolt_large/laser_bolt_large.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [2.5, 1.5]
			}
			FrameCount = 8
			FrameSize = [192, 128]
			FramesPerRow = 2
			FramesPerSecond = 30
		}
	}
	
	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [5, 5]
			VertexColor = [255, 0, 0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.25
		}
	}
}