ID = "janiTNT.burst1asermk2shot"
Range = 250
IdealRange = [60, 200]
IdealRadius = [5, 50]
Speed = 260
ReceivableBuffs = [ElectronBuff]

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.0001
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Targetable
	{
		Type = Targetable
		Health = 100
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		FactorEffectsWith = Targetable

		CrewCollisions = {Enemies=true; Junk=true}
		HitCrew = &HitOperational

		HitShield = &HitOperational
		HitOperational
		{
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = Damage
					Damage = { BaseValue=1000; BuffType=ElectronBuff; BuffMode=Multiply; }
				}
				{
					Type = Impulse;
					Impulse = 2;
				}
			]
			
			MediaEffectsScale = 0.8
			MediaEffects
			[
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_hit.rules>
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_flash.rules>
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_sparks.rules>
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_spikes.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_small/laser_bolt_small_hit.wav"
					Volume = .4
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = { BaseValue=500; BuffType=ElectronBuff; BuffMode=Multiply; }
				}
				{
					Type = Impulse;
					Impulse = 1;
				}
			]

			MediaEffectsScale = 0.8
			MediaEffects
			[
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_hit_struct.rules>
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_flash.rules>
				&<./data/shots/laser_bolt_small/particles/laser_bolt_small_sparks_struct.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_small/laser_bolt_small_hit.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}

	Sprite
	{
		Type = AnimatedSprite
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "./data/shots/laser_bolt_small/laser_bolt_small.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [1.45, 1.45]
			}
			FrameCount = 8
			FrameSize = [128, 128]
			FramesPerRow = 2
			FramesPerSecond = 60
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [4.65, 4.65]
			VertexColor = [255, 0, 0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.25
		}
	}
}