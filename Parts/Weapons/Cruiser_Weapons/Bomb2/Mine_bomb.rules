				Texture
				{
					File = "./data/shots/missile_he/missile_he_light.png"
					MipLevels = max
					SampleMode = Linear
				}
				Size = [2, 2]
				TargetBlendMode = Add
			}
			FrameCount = 4
			FrameSize = [98, 98]
			FramesPerRow = 4
