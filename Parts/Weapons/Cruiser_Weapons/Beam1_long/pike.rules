				[
					{
						File = "weapon_off.png"
						NormalsFile = "weapon_n1.png"
						Size = [1, 1]
					}
				]
			}
			Walls
			{
				Layer = "FTLlowturrets"
				Offset = [0, -1]
				DamageLevels
				[
					{
						File = "weapon_spikes.png"
						NormalsFile = "weapon_n2.png"
						Size = [1, 1]
					}
				]
			}
		}

		ShootSprite
		{
			Type = Sprite
			ChainedTo = Turret
			//ChainedTo = Oscillator
			Location = [0.05, 0]
			Rotation = 90d
			Layer = "FTLlowturrets"
			ResetAnimationTrigger = BeamEmitter
			OperationalToggle = BeamEmitter
			AtlasSprite
