					"weapon_n1.png"
					"weapon_n1.png"
					"weapon_n1.png"
					"weapon_n1.png"
					"weapon_n1.png"
					"weapon_n1.png"
					"weapon_n1.png"
					"weapon_n1.png"
				]
				Size = [1, 1]
				AnimationInterval = 0.75
				AnimationStartTime = MinValue
				ClampAnimation = true
			}
		}
		
		TurretHolder
		{
			Type = Sprite
			Location = [.5, -.5]
			Layer = "structure"
			ChainedTo = TurretSlider // Evil
			AtlasSprite
			{
				File = "../base/Medmount.png"
