		}
		
		Graphics2
		{
			Type = Graphics
			Location = [.5, 1.5]
			OperationalToggle = IsOperational
			OperationalDoodad
			{
				Offset = [0, -0.5]
				Layer = "doors"
				DamageLevels
				[
