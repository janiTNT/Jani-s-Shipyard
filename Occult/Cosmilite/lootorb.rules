Part : <../base_part_occult.rules>/Part
{
	NameKey = "Parts/MegaroidCosmiliteLoot"
	DescriptionKey = "Parts/MegaroidCosmiliteLootDesc"
	ID = janiTNT.lootorb_cosmilite // Part IDs must always be in the form of "author_name.part_name". If making your own mod, do *not* use "cosmoteer" as your author name, because it may conflict with future vanilla parts.
	EditorGroup = "BossParts"
	Resources
	[
		[comilitebar, 10]
	]
	IsRotateable = true
	ReceivableBuffs : ^/0/ReceivableBuffs []
	Density = 3
	MaxHealth = 32000 * 100
	AIValueFactor = 2
	EditorReplacementPartID = ""
	SelectionPriority = 1
	SelectionTypeID = "weapons"
	Size = [4, 2] // must be same
	AllowedContiguity = []
	ContiguityOriginPriority = 2
	TypeCategories = [armor, weapon, asteroid] // buff mining
	InitialPenetrationResistance = 1
	ContinuingPenetrationResistance = 1
	ExplosiveDamageAbsorption = 100%
	DamageResistances = {explosive = 65%}
	GenerateRectCollider = false
	IsExternal = true
	ExternalWalls = [None]
	InternalWalls = [All]
	IsWalled = false
	EditorIcon
	{
		Texture = "../lootorb.png"
		Size = [64, 64]
	}
	Components : ^/0/Components
	{
		CosmiliteLoot
		{
			Type = ResourceStorage
			ResourceType = comilitebar
			MaxResources = 500
			StartingResources = &MaxResources
			DropResourcesWhenDestroyed = true
		} 
		GoldiumLoot : CosmiliteLoot
		{
			ResourceType = goldium
			MaxResources = 400
		}
		TristeelLoot : CosmiliteLoot
		{
			ResourceType = tristeel
			MaxResources = 400
		}
		DiamondLoot : CosmiliteLoot
		{
			ResourceType = diamond
			MaxResources = 120
		}
		SteelLoot : CosmiliteLoot
		{
			ResourceType = steel
			MaxResources = 400
		}
		HyperiumLoot : CosmiliteLoot
		{
			ResourceType = hyperium
			MaxResources = 100
		}
		UraniumLoot : CosmiliteLoot
		{
			ResourceType = enriched_uranium
			MaxResources = 240
		}// spawn full with more resources
		
		HealEffects
		{
			Type = Graphics
		}
		BoomStorage
		{
			Type = Graphics
		}
		DetonateTrigger
		{
			Type = Graphics
		}
		DetonateEffects
		{
			Type = Graphics
		}
		DestroyedEffectsDeathBySigil
		{
			Type = Graphics
		}//remove ability to instant death.
		
		Collider
		{
			Type = CircleCollider
			Location = [2, 1]
			Radius = .56
			Density = 20
		}
		
		SalvagedEffects
		{
			Type = DeathEffects
			Location = [2, 1]
			WhenSalvaged = true
			MediaEffectsScale = 0.5
			MediaEffects
			[
				&<../particles/salvage_complete_shrapnel_occult.rules>
				&<./data/ships/common/particles/salvage_complete_ship_flash.rules>
				&<./data/ships/common/particles/salvage_complete_ship_smoke.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_flash_light.rules>


				: /BASE_SOUNDS/AudioExteriorDetail
				{
					Sound = "./data/ships/common/salvage_finish.wav"
					Volume = 1
					SpeedVariation = .25
				}
				
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/ships/common/ftl_jump_out.wav"
					Volume = 5
					Speed = 0.25
				}
			]
		}
		
		Graphics
		{
			Type = Graphics
			Location = [2, 1]
			Floor
			{
				Layer = "asteroid_lights_add"
				RandomUVRotation = true
				DamageLevels
				[
					{
						File = "../lootorb.png"
						Size = [2, 2]
						//RotSpeed = 180d
						VertexColor = [180, 255, 255]
					}
				]
			}
			Roof
			{
				Layer = "asteroid_roof_lights_fancy"
				RandomUVRotation = true
				DamageLevels
				[
					{
						File = "./Data/ships/common/light_blob.png"
						Size = [10, 10]
						Z = 1.0 // Controls the "height" of the light for the purposes of normal mapping. Set to -1 (or any negative number) to disable normal lighting for this light.
						VertexColor = [180*2, 255*2, 255*2]
					}
				]
			}
		}
		
		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects
			[
				&<../particles/quarter_huge_part_exploding.rules>
				&<../particles/salvage_complete_shrapnel_occult.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_flash_light.rules>
				
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/common_effects/sounds/big_part_destroyed.wav"
					Volume = 1
					SpeedVariation = .25
				}
				
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/ships/common/ftl_jump_out.wav"
					Volume = 5
					Speed = 0.25
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = 1
				}
			]
			Location = [2, 1]
		}
		
		CustomShipIcon
		{
			Type = CustomShipIcon
			Icon// : <./Data/resources/copper/copper.rules>/Overlay
			{
				Texture
				{
					File = "../looticon.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [64, 64]
			}
			Weight = 5
			PulseInterval = 1
			PulseColor = [180, 255, 250, 64]
			ShowAtZoom = 5
		}

		Blueprints = &<./Data/ships/asteroid/rock/rock_2x2.rules>/Part/Components/Blueprints
	}
}