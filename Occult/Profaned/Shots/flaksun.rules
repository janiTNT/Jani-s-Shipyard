ID = "janiTNT.profanedflarkball"
//OtherIDs = ["missile", "cosmoteer.missile"]
Range = 250
IdealRange = 250
Speed = 400

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.8
		Density = 1
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Sprite1
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Spin = 500d
		//IsLit = true
		Sprite
		{
			Texture
			{
				File = "../../lightball.png"
				MipLevels = max
			}
			Size = [1.75, 1.75]
			TargetBlendMode = Add
			VertexColor = [255*1.1, 205*1.1, 128*1.1]
		}
		/*LerpScaleFrom = [0.2, 0.2]
		LerpTime = 0.05*/
	}
	
	Sprite2 : & Sprite1
	{
		Spin = -274d
		Sprite
		{
			Texture
			{
				File = "../../lightball.png"
				MipLevels = max
			}
			Size = [1.6, 1.6]
			TargetBlendMode = Add
			VertexColor = [255*1.1, 205*1.1, 128*1.1]
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper4
		Z = 1
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./data/ships/common/light_blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [8, 8]
			VertexColor = [255*2, 205*2, 128*2]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 1
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.015
		}
		/*LerpScaleFrom = [0.2, 0.2]
		LerpTime = 0.05*/
	}
	
	TrailSprite
	{
		Type = Sprite
		Offset = [0, 0]
		ReduceScaleExponent = 0.5
		Sprite
		{
			Texture
			{
				File = "../../shots/bolttrail.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [10, 1]
			VertexColor = [255*1.1, 205*1.1, 128*1.1]
			TargetBlendMode = Add
		}
		/*LerpScaleFrom = [.1, .1]
		LerpTime = .05*/
	}


	Hit
	{
		Type = SimpleHit
		
		SourceShipLowCollisions = true

		CrewCollisions = {Enemies=true; Junk=true}
		HitCrew = &HitOperational

		HitShield = &HitOperational
		
		BulletCollisions
        {
            Enemies = true
            Junk = true
            //Friendlies = false
            OnlyBulletCategories = [missile, mine, bullet, laser]
        }
		HitBullet = &HitOperational
		HitOperational
		{
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 650
					Radius = 5
					Slices = 1
					Filter
					{
						Ships = false
						Shields = false
						Bullets = true
						OnlyBulletCategories = [missile, laser, bullet, mine]
						Crew = true
					}
				}
				{
					Type = ExplosiveDamage
					TotalDamage = 150
					Radius = 5
					Filter
					{
						Ships = true
						Shields = true
						Bullets = false
						Crew = false
					}
				}
			]

			MediaEffects
			[
				&<./data/shots/pd_shot/particles/pd_shot_spikes.rules>
				&<./data/shots/pd_shot/particles/pd_shot_sparks.rules>
				&<./Data/ships/terran/point_defense/particles/point_defense_shoot_flash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .15
				}
			]
		}
		HitStructural = &HitOperational

		HitFriendly
		{
			MediaEffects
			[
				&<./data/shots/pd_shot/particles/pd_shot_spikes.rules>
				&<./data/shots/pd_shot/particles/pd_shot_sparks.rules>
				&<./Data/ships/terran/point_defense/particles/point_defense_shoot_flash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .15
				}
			]
		}
	}
}