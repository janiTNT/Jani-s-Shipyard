	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper4
		Z = 1
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./data/ships/common/light_blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [8, 2]
			VertexColor = [255*2, 205*2, 128*2]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 1
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.015
		}
		/*LerpScaleFrom = [0.2, 0.2]
		LerpTime = 0.05*/
	}
	
	TrailSprite
	{
		Type = Sprite
		Offset = [-1, 0]
		ReduceScaleExponent = 0.5
		Sprite
		{
			Texture
			{
				File = "../../shots/bolttrail.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [14, 0.9]
			VertexColor = [255*1.1, 205*1.1, 128*1.1]
			TargetBlendMode = Add
		}
		LerpScaleFrom = [0, 1]
		LerpTime = .05
	}
	
	MediaEffects
	{
		Type = MediaEffects
		Offset = [-3, 0]
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		MediaEffectsScale = 1
		MediaEffects
		[
			: &/JANI_COMMON/TrailBase/Particles
			{
				Def : ^/0/Def
				{
					Updaters : ^/0/Updaters
					[
						{
							Type = Lifetime
							LifeInOut = life
							Lifetime = 0.2
							Name = Lifetime
							Enabled = true
							UpdateAfterInit = false
						}
						{
							Type = Operator
							DataType = Vector2
							AIn = location
							BIn = velocity
							ResultOut = location
							Operator = AddDt
							Name = "Apply velocity"
							Enabled = true
							UpdateAfterInit = false
						}
						{
							Type = Lerp
							LerpIn = life
							DataOut = color
							Invert = false
							ValueType = Color
							FromValue
							{
								Rf = 1
								Gf = 0.5
								Bf = 0
								Af = 1
							}
							ToValue
							{
								Rf = 0.2
								Gf = 1
								Bf = 0.5
								Af = 0
							}
							Name = ActualColorLerp
							Enabled = true
							UpdateAfterInit = true
						}
					]
					Renderer : ^/0/Renderer
					{
						BaseSize
						{
							X = 8
							Y = 0.75
						}
					}
				}
				EmitterDef : ^/0/EmitterDef
				{
					EmitPerSecond = 150
				}
			}
		]
	}


	Hit
	{
		Type = SimpleHit
		
		SourceShipLowCollisions = true

		CrewCollisions = {Enemies=true; Junk=true}
		HitCrew = &HitOperational

		HitShield = &HitOperational
		
		BulletCollisions
        {
            Enemies = true
            Junk = true
            //Friendlies = false
            OnlyBulletCategories = [missile, mine, bullet, laser, parry_targetable]
        }
		HitBullet = &HitOperational
		HitOperational
		{
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 800
					Radius = 8
					Slices = 1
					Filter
					{
						Ships = false
						Shields = false
						Bullets = true
						//OnlyBulletCategories = [missile, laser, bullet, mine]
						OnlyBulletCategories = [laser, bullet, mine]
						Crew = true
					}
				}
				{
					Type = ExplosiveDamage
					TotalDamage = 2000000
					Radius = 16
					Slices = 1
					Filter
					{
						Ships = false
						Shields = false
						Bullets = true
						OnlyBulletCategories = [parry_targetable]
						Crew = false
					}
				}
				{
					Type = ExplosiveDamage
					TotalDamage = 150
					Radius = 8
					Filter
					{
						Ships = true
						Shields = true
						Bullets = false
						Crew = false
					}
				}
			]

			MediaEffects
			[
				&<./data/shots/pd_shot/particles/pd_shot_spikes.rules>
				&<./data/shots/pd_shot/particles/pd_shot_sparks.rules>
				&<./Data/ships/terran/point_defense/particles/point_defense_shoot_flash.rules>
				&<./data/shots/flak_large/particles/flak_large_flash.rules>
				&<particles/flaksunsmoke.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .15
				}
			]
		}
		HitStructural = &HitOperational

		HitFriendly
		{
			MediaEffects
			[
				&<./data/shots/pd_shot/particles/pd_shot_spikes.rules>
				&<./data/shots/pd_shot/particles/pd_shot_sparks.rules>
				&<./Data/ships/terran/point_defense/particles/point_defense_shoot_flash.rules>
				&<./data/shots/flak_large/particles/flak_large_flash.rules>
				&<particles/flaksunsmoke.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .15
				}
			]
		}
	}
}