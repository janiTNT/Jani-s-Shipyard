ID = "janiTNT.astral_bigmine_fragment"
Range = 300
IdealRange = [100, 170]
IdealRadius = [5, 50]
Speed = 110

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 1
		Density = 0.0001
	}

	Death
	{
		Type = DeathByDistanceTraveled
		Distance = (&~/Range)
	}
	
	Homing
	{
		Type = TargetHoming
		TurnVelocity = 180d
		Delay = 0
		TargetLeadPrediction = false
		AvoidanceRaycastDistance = 100		
		ModifiesLinearVelocity = true
	}

	Targetable
	{
		Type = Targetable
		Health = 4000
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		FactorEffectsWith = Targetable
		FriendlyShipLowCollisions = false

		CrewCollisions = {Enemies=true; Junk=true}
		HitCrew = &HitOperational

		HitShield = &HitOperational
		HitOperational
		{
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 50000
					Radius = 8
					Filter
					{
						Friendlies = true
					}
				}
				{
					Type = Impulse;
					Impulse = 800;
				}
			]

			MediaEffects
			[
				&<./data/shots/missile_he/particles/missile_he_hit.rules>
				&<./data/shots/missile_he/particles/missile_he_flash.rules>
				&<./data/shots/missile_he/particles/missile_he_smoke.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_he/missile_he_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		HitStructural = &HitOperational

		HitFriendly
		{
			MediaEffects
			[
				&<./data/shots/missile_he/particles/missile_he_hit.rules>
				&<./data/shots/missile_he/particles/missile_he_flash.rules>
				&<./data/shots/missile_he/particles/missile_he_smoke.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_he/missile_he_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}

	Sprite
	{
		Type = Sprite
		//Offset = [-2, 0]
		//Spin = 360d * 5
		RenderBucket = BulletUpper1
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Sprite
		{
			Texture
			{
				File = "astralmine_frag.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [3, 3]
			//TargetBlendMode = Add
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0.5
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [2*1.4, 2*1.4]
			VertexColor = [128, 64, 128]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.25
		}
	}
	
	MediaEffects
	{
		Type = MediaEffects
		MediaEffectsScale = .2
		MediaEffects
		[
			&<./data/shots/bullet_railgun/particles/bullet_trail_railgun.rules>
		]
	}
}