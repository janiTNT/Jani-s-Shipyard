				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_nuke/missile_nuke_hit.wav"
					Volume = 1
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
	}

	Sprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		//IsLit = true
		Sprite
		{
			Texture
			{
				File = "Hypernuke.png"
				MipLevels = max
			}
			Size = [8, 6]
			TargetBlendMode = Add
		}
		LerpScaleFrom = [0, 0]
		LerpTime = 1
	}

	LightsSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper3
		StartTime = 0.2
		Spin = 500d
		Z = .25
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./data/shots/missile_nuke/radiation.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [28, 28]
			VertexColor = [255, 0, 255]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
