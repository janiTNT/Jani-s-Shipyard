				File = "HypernukeRing.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [160 * 1.175, 160 * 1.175]
			VertexColor = [64, 0, 64]
			TargetBlendMode = Add
		}
		LerpScaleFrom = [0, 0]
		LerpTime = 5
	}
	
