		{
			Texture
			{
				File = "HypernukeRing.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [160 * 1.175, 160 * 1.175]
			VertexColor = [128, 0, 0]
			TargetBlendMode = Add
		}
	}
	
	MediaEffects
	{
		Type = MediaEffects
		Offset = [-142/64, 0]
		StartTime = 1
		Rotation = 180d
		MediaEffects
		[
			&<NukePlume.rules>
			&<NukePlumeLight.rules>
		]
	}

