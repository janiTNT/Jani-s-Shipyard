ID = "janiTNT.hell_sunmonster_small"
Range = 10000
IdealRange = 250
Speed = -80
Stage2 = &<Sunbombp2.rules>

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 3
		Density = 1
		LinearDamping = 1 * 0.25
		AngularDamping = 1
		FrameOfReferenceDuration = 1
	}

	Homing
	{
		Type = TargetHoming
		TurnVelocity = 80d
		Delay = 0
		//AvoidanceRaycastDistance = 250
		VelocityCompensation = 80%
	}
	
	TargetSearch
	{
		Type = TargetSearch
		Interval = 1
		Range = 560
		TargetTypesByPriority = [ShipParts]
	}

	Retarget
	{
		Type = SameShipRetarget
	}

	Acceleration
	{
		Type = Acceleration
		Acceleration = 5
	}

	DeathByLifetime
	{
		Type = DeathByLifetime
		Lifetime = 4
		OnDeath
		{
			HitEffects
			[
				{
					Type = SpawnBullets
					Bullet = &~/Stage2
					Count = 1
					InheritVelocity = false
					ScaleHealth = true
				}
			]
			
			MediaEffects
			[
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/ships/terran/missile_launcher/shoot.wav"
					SpeedVariation = .25
					Speed = 0.75
				}
			]
		}
	}

	Sprite1
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Spin = 500d
		//IsLit = true
		Sprite
		{
			Texture
			{
				File = "../../lightball.png"
				MipLevels = max
			}
			Size = [18, 18]
			TargetBlendMode = Add
			VertexColor = [255*4, 205*0.2, 128*0.2]
		}
		LerpScaleFrom = [0.2, 0.2]
		LerpTime = 1
	}
	
	Sprite2 : & Sprite1
	{
		Spin = -274d
		Sprite
		{
			Texture
			{
				File = "../../lightball.png"
				MipLevels = max
			}
			Size = [20, 20]
			TargetBlendMode = Add
			VertexColor = [255*4, 205*0.2, 128*0.2]
		}
	}
	
	LaserSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Offset = [60/4, 0]
		//Spin = 360d
		Z = .25
		LerpScaleFrom = [0.5, 0]
		LerpTime = 1
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "laser.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [60/2, 10]
			VertexColor = [256*0.75, 0, 0]
			TargetBlendMode = Add
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper4
		Z = 1
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./data/ships/common/light_blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [60, 60]
			VertexColor = [255*8, 205*0, 128*0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 1
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.015
		}
		LerpScaleFrom = [0.2, 0.2]
		LerpTime = 1
	}

	Targetable
	{
		Type = Targetable
		Health = 7200 * 16
		TargetCategory = "missile"

		// No AOE damage when shot down.
		OnDeath = &../Hit/HitFriendly
	}

	Hit
	{
		Type = SimpleHit
		SourceShipLowCollisions = false

		HitShield = &HitOperational
		HitOperational
		{
			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 1800000
					Radius = 12
					/*Filter
					{
						Friendlies = true
					}*/
				}
				{
					Type = Impulse;
					Impulse = 100;
				}
			]
			
			MediaEffectsScale = 5
			MediaEffects
			[
				&<./data/shots/missile_nuke/particles/missile_nuke_flash_light.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_flash.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_shockwave.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_hit.rules>
				//&<../../particles/bigflash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_nuke/missile_nuke_hit.wav"
					Volume = 1
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		HitStructural = &HitOperational

		HitFriendly
		{
			MediaEffectsScale = 5
			MediaEffects
			[
				&<./data/shots/missile_nuke/particles/missile_nuke_flash_light.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_flash.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_shockwave.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_hit.rules>
				//&<../../particles/bigflash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_nuke/missile_nuke_hit.wav"
					Volume = 1
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
	}
}