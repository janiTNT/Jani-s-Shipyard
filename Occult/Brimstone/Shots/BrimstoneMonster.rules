	Hit
	{
		Type = SimpleHit
		SourceShipLowCollisions = false

		HitShield = &HitOperational
		HitOperational
		{
			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 1800000
					Radius = 50
					ImpulsePerNDamage = 10
					NDamage = 1000
					Slices = 1
					Filter
					{
						OperationalHealth = true
						StructuralHealth = false
					}
				}
				{
					Type = ExplosiveDamage
					TotalDamage = 600000
					Radius = 40
					ImpulsePerNDamage = 5
					NDamage = 1000
					Delay = .5
					Slices = 1
					Filter
					{
						OperationalHealth = false
						StructuralHealth = true
					}
				}
				{
					Type = SpawnBullets
					Bullet = &<brimstonedart.rules>
					Count = 32
					Spread = [-6d, 6d]
					Distance = 0
					InheritVelocity = false
				}
				{
					Type = SpawnBullets
					Bullet = &<Sunbombp2.rules>
					Count = 3
					Spread = [-8d, 8d]
					Distance = 0
					InheritVelocity = false
				}
			]
			
			MediaEffectsScale = 10
			MediaEffects
			[
				&<./data/shots/missile_nuke/particles/missile_nuke_flash_light.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_flash.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_shockwave.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_hit.rules>
				//&<../../particles/bigflash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_nuke/missile_nuke_hit.wav"
					Volume = 1
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		HitStructural
		{
			HitEffects = []
		}

		HitFriendly
		{
			MediaEffectsScale = 10
			MediaEffects
			[
				&<./data/shots/missile_nuke/particles/missile_nuke_flash_light.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_flash.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_shockwave.rules>
				&<./data/shots/missile_nuke/particles/missile_nuke_hit.rules>
				//&<../../particles/bigflash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/missile_nuke/missile_nuke_hit.wav"
					Volume = 1
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
	}
	
