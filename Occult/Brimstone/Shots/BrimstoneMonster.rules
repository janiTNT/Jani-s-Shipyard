ID = "janiTNT.brimstonemonster_boss"
//OtherIDs = ["missile", "cosmoteer.missile"]
Range = 10000
IdealRange = 250
Speed = 10

Components
{
	Physics
	{
		Type = CirclePhysics
		//Radius = 34 //Perfect...
		Radius = 28
		Density = 3
		LinearDamping = 1 * 0.25
		AngularDamping = 1
		FrameOfReferenceDuration = 1
	}

	Homing
	{
		Type = TargetHoming
		TurnVelocity = 45d
		Delay = 0
		//AvoidanceRaycastDistance = 250
		VelocityCompensation = 80%
	}
	
	TargetSearch
	{
		Type = TargetSearch
		Interval = 1
		Range = 560
		TargetTypesByPriority = [ShipParts]
	}

	Retarget
	{
		Type = SameShipRetarget
	}

	Acceleration
	{
		Type = Acceleration
		Acceleration = 80 * 0.25
	}

	DeathByLifetime
	{
		Type = DeathByLifetime
		Lifetime = 70
		OnDeath = &../Hit/HitFriendly
	}

	Sprite1
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		RotOffset = 90d
		//IsLit = true
		Sprite
		{
			Texture
			{
				File = "../../../TheseAssetsAreFromCalamityMod/BrimstoneMonster.png"
				MipLevels = max
			}
			//UVRotation = 1
			Size = [72, 72]
			TargetBlendMode = Add
		}
		LerpScaleFrom = [0.1, 0.1]
		LerpTime = 1.5
	}
	
	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper4
		Z = 1
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./data/ships/common/light_blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [150, 150]
			VertexColor = [255*2, 205*2, 128*2]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 1
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.015
		}
		LerpScaleFrom = [0.2, 0.2]
		LerpTime = 3
	}

