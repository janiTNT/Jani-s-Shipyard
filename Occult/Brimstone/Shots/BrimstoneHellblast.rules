ID = "janiTNT.brimstonehellblast_boss"
//OtherIDs = ["missile", "cosmoteer.missile"]
Range = 2500
IdealRange = 1000
Speed = 150

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 2
		Density = 1
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Targetable
	{
		Type = Targetable
		Health = 16000
		TargetCategory = "laser"
	}
	
	DamagePool
	{
		Type = DamagePool
		Damage = 80000
	}

	Hit
	{
		Type = PenetratingHit
		FactorEffectsWith = Targetable
		Penetration = 60
		PenetrationSpeed = 30
		
		SourceShipLowCollisions = false

		CrewCollisions = {Enemies=true; Junk=true}
		HitCrew = &HitOperational

		HitShield = &HitOperational
		HitOperational
		{
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 100000
					Radius = 8
					Filter
					{
						Friendlies = true
					}
				}
				{
					Type = Damage
					Damage = 0
					DamagePool = DamagePool
				}
				{
					Type = Impulse;
					Impulse = 80;
				}
			]

			MediaEffects
			[
				&<./data/shots/missile_he/particles/missile_he_flash.rules>
				&<./data/shots/missile_he/particles/missile_he_hit.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		HitStructural = &HitOperational

		HitFriendly
		{
			MediaEffects
			[
				&<./data/shots/missile_he/particles/missile_he_flash.rules>
				&<./data/shots/missile_he/particles/missile_he_hit.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./data/shots/laser_bolt_large/laser_bolt_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		PenetratingOperational
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 0
					DamagePool = DamagePool
				}
			]
		}
		PenetratingStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 0
					DamagePool = DamagePool
				}
			]
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}
	
	AnimatedSprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "../../../TheseAssetsAreFromCalamityMod/BrimstoneHellblast.png"
					MipLevels = max
					SampleMode = Linear
				}
				Size = [12, 12]//bit bigger but who care
				//TargetBlendMode = Add
			}
			FrameCount = 4
			FrameSize = [64, 64]
			FramesPerRow = 2
			FramesPerSecond = 20
		}
		LerpScaleFrom = [0, 0]
		LerpTime = 0.5
	}
	
	LaserSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Offset = [100/4, 0]
		//Spin = 360d
		Z = .25
		LerpScaleFrom = [0.5, 0]
		LerpTime = 2
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "laser.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [100/2, 1.5]
			VertexColor = [256*0.35, 0, 0]
			TargetBlendMode = Add
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0.5
		IsLight = true
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [24, 24]
			VertexColor = [128, 0, 0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.25
		}
		LerpScaleFrom = [0, 0]
		LerpTime = 0.8
	}
}